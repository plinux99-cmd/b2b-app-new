# Backend Configuration Variables
# Copy this file to backend.tfvars and customize for your environment
# Usage: terraform init -backend-config=backend.tfvars

# S3 Backend Configuration
bucket         = "YOUR-PROJECT-terraform-state"      # Change to your unique bucket name
key            = "prod/terraform.tfstate"             # State file path within bucket
region         = "us-east-1"                          # AWS region for state bucket
dynamodb_table = "YOUR-PROJECT-terraform-locks"       # DynamoDB table name for locking
encrypt        = true                                 # Enable server-side encryption

# Examples for different environments:
# Development:
#   bucket = "mycompany-dev-terraform-state"
#   key    = "dev/terraform.tfstate"
#
# Production:
#   bucket = "mycompany-prod-terraform-state"
#   key    = "prod/terraform.tfstate"
#
# Multi-account:
#   bucket = "mycompany-account123-terraform-state"
#   key    = "prod/terraform.tfstate"
